<UserControl x:Class="EOSK.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="10" HorizontalAlignment="Center">
                    <!-- Logo -->
                    <Image x:Name="LogoImage"
                           Width="96" 
                           Height="96" 
                           HorizontalAlignment="Center"/>
                    
                    <!-- 软件名称 -->
                    <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Text="万物屏幕键盘"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,5"/>
                    
                    <!-- 软件描述 -->
                    <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}"
                               TextWrapping="Wrap"
                               Text="万物屏幕键盘 是一款现代化的虚拟键盘软件，为您提供便捷的屏幕输入解决方案。"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,5"/>
                    
                    <!-- 版本号 -->
                    <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Text="版本 1.0.0"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>

                <Separator Grid.Row="1" Margin="10,5"/>

                <!-- 底部区域（按钮和版权信息） -->
                <Grid Grid.Row="3">
                    <StackPanel>
                        <!-- 按钮区域 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5">
                            <Button Style="{StaticResource GradientButtonStyle}"
                                    Margin="3"
                                    Click="GithubButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Github" />
                                    <TextBlock Text="Github" Margin="3,0,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource GradientButtonStyle}"
                                    Margin="3"
                                    Click="QQGroupButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Qqchat" />
                                    <TextBlock Text="QQ群" Margin="3,0,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource GradientButtonStyle}"
                                    Margin="3"
                                    Click="FeedbackButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CommentQuestionOutline" />
                                    <TextBlock Text="问题反馈" Margin="3,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- 版权信息 -->
                        <Border Background="{DynamicResource PrimaryHueLightBrush}" 
                                CornerRadius="4" 
                                Padding="10" 
                                Margin="0,5,0,0">
                            <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}"
                                       Text="版权所有 (C) 2021-2025 万物永存技术工作室"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryHueDarkBrush}"
                                       FontSize="12"
                                       FontWeight="Medium"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>